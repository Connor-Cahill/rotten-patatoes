<form action="#" id="newComment" method="post"><!-- took out "method='post'" -->
<input type="hidden" name="reviewId" value="{{review._id}}">

    <fieldset>
        <legend>Add A Comment</legend>
        <div class="form-group">
            <label for="comment-title">Title</label><br>
            <input type="text" id="comment-title" name="title" class="form-control" placeholder="Title">
        </div>

        <div class="form-group">
            <label for="comment-content">Description</label>
            <textarea name="content" rows="10" id="comment-content" name="content" placeholder="Your comment..." class="form-control"></textarea>
        </div>
    </fieldset>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Comment</button>
    </div>
</form>
