
<a href="/">Back To Home</a>
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>{{review.title}}</h1>
        <h2>{{review.movieTitle}}</h2>
        <p>{{review.description}}</p>
        <p>Rating: {{review.rating}}/5</p>


        <p><a href="/reviews/{{review._id}}/edit">Edit</a></p>


        <p><form method="POST" action="/movies/{{review.movieId}}/reviews/{{review._id}}?_method=DELETE">
            <button type="submit">DELETE</button>
        </form></p>
         <!-- {{> review}} -->

<!-- Add comment section -->
        {{> comment-form}}

        <hr>
        <!-- displays comments -->
        <div id="comments">
            {{#each comments}}
            {{> comment}}
            {{/each}}
        </div>


    </div>
</div>
